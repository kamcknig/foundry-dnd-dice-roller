{
  "compileOnSave": true,
  "compilerOptions": {
		"types": [
      "foundry-pc-types"
		],
    "module": "ES6",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
